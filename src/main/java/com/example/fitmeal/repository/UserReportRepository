package com.example.fitmeal.repository;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;

import com.example.fitmeal.domain.UserReport;
import com.example.fitmeal.domain.Users;

public interface UserReportRepository extends JpaRepository<UserReport, Long>{

    long countByReported_UserNum(Integer reportedUserNum);

    List<UserReport> findByReported_UserNum(Integer reportedUserNum);
    
    Optional<UserReport> findByReporterAndReported(Users reporter, Users reported);

}
